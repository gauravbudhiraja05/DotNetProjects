@model AngularJsCrudOperations.EmployeeData
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    textbox {
        padding: 5px;
        border: 1px solid groove;
    }

    input.ng-dirty.ng-invalid {
        border: 1px solid red;
        background-color: rgb(255, 244, 244);
    }

    .error {
        color: red;
    }
</style>
<h2 style="text-align:center">Edit Employee Record</h2>
<br>
<hr />
<div ng-controller="EmpController">
    <form name="EditForm" novalidate>
        <div style="color:red">{{message}}</div>
        <table class="table table-responsive table-bordered">
            <tr>
                <td>ID</td>
                <td>
                    <input class="textbox" type="number" ng-model="EmployeeId" name="eId" ng-class="submitted?'ng-dirty':''" required autofocus />
                    <span class="error" ng-show="(EditForm.eId.$dirty || submitted) && EditForm.eId.$error.required">ID is Required</span>
                </td>
            </tr>
            <tr>
                <td>Name</td>
                <td>
                    <input class="textbox" type="text" ng-model="EmployeeName" name="eName" ng-class="submitted?'ng-dirty':''" required autofocus />
                    <span class="error" ng-show="(EditForm.eName.$dirty || submitted) && EditForm.eName.$error.required">Name Is Required</span>
                </td>
            </tr>
            <tr>
                <td>FatherName</td>
                <td>
                    <input class="textbox" type="text" ng-model="EmployeeFatherName" name="eFatherName" ng-class="submitted?'ng-dirty':''" required autofocus />
                    <span class="error" ng-show="(EditForm.eFatherName.$dirty || submitted) && EditForm.eFatherName.$error.required">Father Name Is Required</span>
                </td>
            </tr>
            <tr>
                <td>Email ID</td>
                <td>
                    <input class="textbox" type="text" ng-model="EmployeeEmailID" name="eEmailID" ng-class="submitted?'ng-dirty':''" required autofocus />
                    <span class="error" ng-show="(EditForm.eEmailID.$dirty || submitted) && EditForm.eEmailID.$error.required">Email Is Required</span>
                </td>
            </tr>
            <tr>
                <td>Phone No</td>
                <td>
                    <input class="textbox" type="text" ng-model="EmployeePhoneNo" name="ePhoneNo" ng-class="submitted?'ng-dirty':''" required autofocus />
                    <span class="error" ng-show="(EditForm.ePhoneNo.$dirty || submitted) && EditForm.ePhoneNo.$error.required">Phone Number Is Required</span>
                </td>
            </tr>
            <tr>
                <td>Address</td>
                <td>
                    <input class="textbox" type="text" ng-model="EmployeeAddress" name="eAddress" ng-class="submitted?'ng-dirty':''" required autofocus />
                    <span class="error" ng-show="(EditForm.eAddress.$dirty || submitted) && EditForm.eAddress.$error.required">Address Is Required</span>
                </td>
            </tr>
        </table>
        <input type="submit" class="btn btn-success" ng-click="UpdateEmployee(Employee)" value="Update" />
        <p class="btn btn-primary">@Html.ActionLink("Back to List", "Index", null, new { style = "color:white" })</p>
    </form>
</div>