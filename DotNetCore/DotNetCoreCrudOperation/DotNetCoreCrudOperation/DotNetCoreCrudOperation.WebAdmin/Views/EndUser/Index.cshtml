@model IEnumerable<PickfordsIntranet.ViewModels.EndUser.EndUserGridItemVM>
@{
    ViewData["Title"] = "End User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="top_filter_bar">
    <div class="center_wrap">

        <div class="top_filter_left">

            <button type="button" class="add_new_list_item" onClick="window.location.href='@Url.Action("AddEndUser","EndUser")'">Add new</button>
            <button id="btnDeleteAllCheckedEndUser" type="button" class="delete_list_item">delete</button>

        </div>

        <div class="top_filter_right">


            <div class="form_group">
                <fieldset>
                    <input type="text" id="txtSearchEndUserList" class="form-control" placeholder="Search">
                    <input type="button" class="search_btn" value="go" />
                </fieldset>
            </div>
        </div>

    </div>
</div>
<!--End top_filter_bar-->


<div class="full_width">
    <div class="center_wrap">

        <div class="content_wrap">

            <div class="page_heading">
                <h1>End Users</h1>
            </div>
            <!--End page_heading-->

            <div class="table_wrap">
                <table id="tblEndUsers" class="table">
                    <thead>
                        <tr>
                            <th style="width: 70px;">
                                <div class="table_checkbox">
                                    <input type="checkbox" id="checkall" class="check_all">
                                    <label for="checkall">Accept</label>
                                </div>
                            </th>
                            <th style="width: 100px;">
                                <button type="button" class="table_title active"><i class="icon asc"></i> User ID</button>
                            </th>
                            <th>
                                <button type="button" class="table_title"><i class="icon"></i> First Name</button>
                            </th>
                            <th>
                                <button type="button" class="table_title"><i class="icon"></i> Surname</button>
                            </th>
                            <th class="editEndUser" style="width:75px;text-align: center;">Edit</th>
                            <th class="deleteEndUser" style="width:75px;text-align: center;">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td style="width: 70px;">
                                    <div class="table_checkbox">
                                        <input type="checkbox" id="checkitem1" class="check_item">
                                        <label for="checkitem1"></label>
                                    </div>
                                </td>
                                <td>#@user.Id</td>
                                <td>@user.FirstName</td>
                                <td>@user.Surname</td>
                                <td style="width:75px;text-align: center;">
                                    <button type="button" class="edit_item" onClick="window.location.href='@Url.Action("EditEndUser","EndUser",new { Id=user.Id})'">edit</button>
                                </td>
                                <td style="width:75px;text-align: center;">
                                    <span style="display:none">@user.Id</span>
                                    <button type="button" class="delete_item endUserItem">delete</button>
                                </td>

                            </tr>

                        }
                    </tbody>
                </table>
            </div>




        </div>
        <!--End content_wrap-->



    </div>
    <!--End center_wrap-->

</div>
<!--End full_width-->
<!--Modal Popup-->
<script src="~/js/EndUser/endUser.endUsers.js" asp-append-version="true"></script>

