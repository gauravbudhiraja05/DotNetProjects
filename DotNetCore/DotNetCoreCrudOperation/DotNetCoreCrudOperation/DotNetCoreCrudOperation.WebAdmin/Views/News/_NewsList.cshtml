@model PickfordsIntranet.ViewModels.News.NewsListGridItemVM
@{
    Layout = null;
}
@section Styles{
    <link href="~/css/jquery.dataTables.min.css" rel="stylesheet" asp-append-version="true"/>
}

<div class="page_heading">
    <h1>News Listing</h1>
</div>

<div class="table_wrap">
    <table id="tblNewsList" class="table">
        <thead>
            <tr>
                <th style="width: 70px;">
                    <div class="table_checkbox">
                        <input type="checkbox" id="checkall" class="check_all">
                        <label for="checkall">Accept</label>
                    </div>
                </th>
                @*<th style="width:50px;">
                    <button type="button" class="table_title"><i class="icon asc"></i> Code</button>
                </th>*@
                <th style="width: 300px;">
                    <button type="button" class="table_title active"><i class="icon asc"></i> Title</button>
                </th>
                <th>
                    <button type="button" class="table_title"><i class="icon"></i> Department</button>
                </th>
                <th>
                    <button type="button" class="table_title"><i class="icon"></i> Creation Date</button>
                </th>
                <th>
                    <button type="button" class="table_title"><i class="icon"></i> Publish Date</button>
                </th>
                <th style="width: 150px;">
                    <button type="button" class="table_title"><i class="icon"></i> Author Name</button>
                </th>
                <th style="width:75px;text-align: center;">Edit</th>
                <th style="width:75px;text-align: center;">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var n in Model.AllNewsListGridItems)
            {
                <tr>
                    <td style="width: 70px;">
                        <div class="table_checkbox">
                            <input type="checkbox" id="checkitem1" class="check_item">
                            <label for="checkitem1"></label>
                        </div>
                    </td>
                    @*<td>@n.NewsCode</td>*@
                    <td>
                        <a onclick="window.location.href='/News/Edit?NewsId=@n.Id'">@n.Title</a>
                    </td>
                    <td >@n.DepartmentName</td>
                    <td>@n.CreationDateDisplay</td>
                    <td>@n.PublishDateDisplay</td>
                    <td>@n.AuthorName</td>
                    <td style="width:75px;text-align: center;">
                        @* onClick="window.location.href = "Edit?NewsId="@n.Id" *@
                        <button type="button" onclick="EditRedirect(@n.Id)" class="edit_item" >edit</button>
                        <input type="hidden" id="hdnDepartmentId" value="@Model.SelectedDepartmentDetails.DepartmentId" />
                    </td>
                    <td style="width:75px;text-align: center;">
                        <span style="display:none">@n.Id</span>
                        <button type="button" class="delete_item newsItem">delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="~/js/News/news._newslist.js" asp-append-version="true"></script>
