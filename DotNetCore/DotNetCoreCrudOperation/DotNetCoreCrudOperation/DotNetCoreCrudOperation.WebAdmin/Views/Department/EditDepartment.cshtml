@model PickfordsIntranet.ViewModels.Departments.Department
@{
    ViewData["Title"] = "Edit Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form id="EditformDepartment" name="EditformDepartment">
    <div class="tab_menu">
        <div class="center_wrap">

            <button type="button" class="back_btn" onClick="window.location.href='@Url.Action("Index","Department")'">Back</button>

            <ul class="tab_list">
                <li class="current"><a href="#tab_1">Department Details</a></li>
            </ul>
            <button type="button" id="Edit_Department_Btn" class="btn_field tab_save">Save</button>
            @*<button id="btnSave" type="submit" class="tab_save" onclick="formAdminUser.action = 'formEndUser'; return true;">Save</button>*@

            @*<button type="button" class="delete_btn">delete</button>*@



        </div>
    </div>
    <!--End tab_menu-->

    <div class="full_width">
        <div class="center_wrap">

            <div class="content_wrap">

                <div class="page_heading">
                    <h1>Edit Department</h1>
                </div>
                <!--End page_heading-->

                <div class="form_wrap">

                    <div class="tab_content" id="tab_1">

                        <div class="form_fields_box">
                            <fieldset>
                                <div class="form_field">
                                    <label for="User_ID">Department Id</label>
                                    <input asp-for="DepartmentId" type="text" disabled>
                                    <input asp-for="DepartmentId" type="hidden">
                                </div>
                                <div class="form_field">
                                    <label for="User_FirstName">
                                        Department Name*
                                        <small class="info_icon" data-toggle="tooltip" data-placement="right" title="(Required) Department Name.">Tooltip</small>
                                    </label>
                                    <input asp-for="DepartmentName" type="text">
                                    <span class="error_label" asp-validation-for="DepartmentName"></span>
                                </div>
                                <div class="form_field">
                                    <label for="User_FirstName">
                                        Telephone Number*
                                        <small class="info_icon" data-toggle="tooltip" data-placement="right" title="(Required) Enter the main phone number for the department.">Tooltip</small>
                                    </label>
                                    <input asp-for="TelephoneNumber" type="text">
                                    <span class="error_label" asp-validation-for="TelephoneNumber"></span>
                                </div>

                                <div class="form_field">

                                    <label for="Message_Image">
                                        Upload an Image*
                                        <small class="info_icon" data-toggle="tooltip" data-placement="right" title="(Required)  Upload the image for the header of the Department Landing Page (1400 * 213 pixels).">Tooltip</small>

                                    </label>
                                    <div class="image_upload">
                                        <span>Upload an image</span>
                                        <input type="file" class="upload" asp-for="HeaderImage" id="fileUploaderImg1" />
                                        <img src="@Url.Content("~/fileserver/Uploads/Admin/Department/" + Model.ImageName)" id="img1" />
                                        <input type="hidden" asp-for="ImageName" />
                                    </div>
                                    <span class="error_label" id="lblErrorMessageImage"></span>
                                </div>
                                <div class="form_field">
                                    <div class="check_field">
                                        <input type="checkbox" asp-for="IsActive">
                                        <label for="Department_isActive?">Publish the department<small class="info_icon" data-toggle="tooltip" data-placement="right" title="" data-original-title="(Optional) Check this to publish the Department.">Tooltip</small></label>
                                    </div>
                                </div>

                                <div class="form_field">
                                    <label for="User_EmailAddress">
                                        Creation Date*
                                        <small class="info_icon" data-toggle="tooltip" data-placement="right" title="(Required) Creation Date.">Tooltip</small>
                                    </label>
                                    <input id="datetimepicker1" asp-for="CreationDate" placeholder="MM/DD/YYYY" disabled="disabled" type="text">
                                    <span class="error_label" asp-validation-for="CreationDate"></span>
                                </div>

                                <div class="form_field">
                                   
                                </div>

                            </fieldset>

                        </div>
                        <!--End form_fields_box-->
                        <div class="form_fields_box">
                            <fieldset>
                                <div id="divValueDepartmentHeadContent" class="form_field">
                                    <label for="DepartmentHead">Department Head* <small class="info_icon" data-toggle="tooltip" data-placement="right" title="(Required) Department head.">Tooltip</small></label>
                                    <textarea asp-for="DepartmentHead" style="width:100%;height:150px;"></textarea>
                                    <span class="error_label" asp-validation-for="DepartmentHead"></span>
                                </div>

                                <div id="hdnDivValueDepartmentHeadContent" style="display:none">There are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration in some form, by injected humour, or randomised words which don't look even slightly believable.</div>


                            </fieldset>

                        </div>
                        <!--End form_fields_box-->

                    </div>



                </div>
                <!--End forom_wrap-->


            </div>
            <!--End content_wrap-->


        </div>
        <!--End center_wrap-->
    </div>

</form>
<!--End full_width-->

<script src="~/js/Department/department.editDepartment.js" asp-append-version="true"></script>

@section DocumentReady{
    var currentTab = location.hash
    if (currentTab) {
    $(".tab_list li").removeClass("current");
    $(".tab_list li>a[href=" + currentTab + "]").closest("li").addClass("current");
    $(".tab_content").hide();
    $(currentTab).show();
    $(currentTab + "_btn").show()
    }

    // Nice Editor
    //<![CDATA[
    bkLib.onDomLoaded(function () {
    new nicEditor({ fullPanel: true, maxHeight: 200 }).panelInstance('DepartmentHead');
    });
    //]]>
    //Select Current Menu
    $('.nav-li').removeClass('current');
    $('#menuItemFAQs').addClass('current');
}