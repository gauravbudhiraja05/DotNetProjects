@model IEnumerable<PickfordsIntranet.ViewModels.Departments.Department>
@{
    ViewData["Title"] = "Departments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="top_filter_bar">
    <div class="center_wrap">

        <div class="top_filter_left">

            <button type="button" class="add_new_list_item" onClick="window.location.href='@Url.Action("AddDepartment","Department")'">Add new</button>
            <button id="btnDeleteAllCheckedDepartament" type="button" class="delete_list_item">delete</button>

        </div>

        <div class="top_filter_right">


            <div class="form_group">
                <fieldset>
                    <input type="text" id="txtSearchDepartmentList" class="form-control" placeholder="Search">
                    <input type="button" class="search_btn" value="go" />
                </fieldset>
            </div>
        </div>

    </div>
</div>
<!--End top_filter_bar-->


<div class="full_width">
    <div class="center_wrap">

        <div class="content_wrap">

            <div class="page_heading">
                <h1>Departments </h1>
            </div>
            <!--End page_heading-->

            <div class="table_wrap">
                <table id="tblDepartments" class="table">
                    <thead>
                        <tr>
                            <th style="width: 70px;">
                                <div class="table_checkbox">
                                    <input type="checkbox" id="checkall" class="check_all">
                                    <label for="checkall">Accept</label>
                                </div>
                            </th>
                            <th style="width: 300px;">
                                <button type="button" class="table_title active"><i class="icon asc"></i>Department Name</button>
                            </th>
                            <th>
                                <button type="button" class="table_title"><i class="icon"></i>Creation Date</button>
                            </th>
                            <th>
                                <button type="button" class="table_title"><i class="icon"></i>Is Active</button>
                            </th>
                            <th class="editEndUser" style="width:75px;text-align: center;">Edit</th>
                            <th class="deleteEndUser" style="width:75px;text-align: center;">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var department in Model)
                        {
                        <tr>
                            <td style="width: 70px;">
                                <div class="table_checkbox">
                                    <input type="checkbox" id="checkitem1" class="check_item">
                                    <label for="checkitem1"></label>
                                </div>
                            </td>
                            <td>@department.DepartmentName</td>
                            <td>@department.CreationDateDisplay</td>
                            <td>@department.IsActive</td>
                            <td style="width:75px;text-align: center;">
                                <button type="button" class="edit_item" onClick="window.location.href='@Url.Action("EditDepartment","Department",new { Id=department.DepartmentId})'">edit</button>
                            </td>
                            <td style="width:75px;text-align: center;">
                                <span style="display:none">@department.DepartmentId</span>
                                <button type="button" class="delete_item departmentItem">delete</button>
                            </td>

                        </tr>

                        }
                    </tbody>
                </table>
            </div>




        </div>
        <!--End content_wrap-->



    </div>
    <!--End center_wrap-->

</div>
<!--End full_width-->
<!--Modal Popup-->
<script src="~/js/Department/department.departments.js" asp-append-version="true"></script>

