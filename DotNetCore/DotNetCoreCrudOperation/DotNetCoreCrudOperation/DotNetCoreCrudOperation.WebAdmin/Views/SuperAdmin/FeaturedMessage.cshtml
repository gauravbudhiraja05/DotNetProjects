@model IEnumerable<PickfordsIntranet.ViewModels.SuperAdmin.FeaturedMessageGridItemVM>
@{
    ViewData["Title"] = "Featured Messages";
}
<style>
    /*.limitCharacters {
        display: block;
        width: 100px;
        height: 40px;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
    }*/
</style>

<div class="top_filter_bar">
    <div class="center_wrap">

        <div class="top_filter_left">

            <button type="button" class="add_new_list_item" onClick="window.location.href='@Url.Action("AddFeaturedMessage","SuperAdmin")'">Add new</button>
            <button id="btnDeleteAllCheckedFeaturedMessage" type="button" class="delete_list_item">delete</button>

        </div>

        <div class="top_filter_right">

            <div class="form_group">
                <fieldset>
                    <input type="text" id="txtSearchFeaturedMessageList" class="form-control" placeholder="Search">
                    <input type="button" class="search_btn" value="go" />
                </fieldset>
            </div>
        </div>

    </div>
</div>
<!--End top_filter_bar-->


<div class="full_width">
    <div class="center_wrap">

        <div class="content_wrap">

            <div class="page_heading">
                <h1>Featured Message</h1>
            </div>
            <!--End page_heading-->

            <div class="table_wrap">
                <table id="tblFeaturdeMessageList" class="table">
                    <thead>
                        <tr>
                            <th style="width: 70px;">
                                <div class="table_checkbox">
                                    <input type="checkbox" id="checkall" class="check_all">
                                    <label for="checkall">Accept</label>
                                </div>
                            </th>
                            <th style="width: 100px;">
                                <button type="button" class="table_title active"><i class="icon asc"></i> Message ID</button>
                            </th>
                            <th style="width: 490px;">
                                <button type="button" class="table_title"><i class="icon"></i> Content</button>
                            </th>
                            <th>
                                <button type="button" class="table_title"><i class="icon"></i> Creation Date</button>
                            </th>
                            <th>
                                <button type="button" class="table_title"><i class="icon"></i> Live?</button>
                            </th>
                            <th style="width: 115px;">
                                <button type="button" class="table_title"><i class="icon"></i> Author Name</button>
                            </th>
                            <th style="width:75px;text-align: center;">Edit</th>
                            <th style="width:75px;text-align: center;">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="@item.Id">
                                <td style="width: 70px;">
                                    <div class="table_checkbox">
                                        <input type="checkbox" id="checkitem1" class="check_item">
                                        <label for="checkitem1"></label>
                                        <span style="display:none">@item.Id</span>
                                    </div>
                                </td>
                                <td>#@item.MessageCode</td>

                                <td>
                                    @*<span class="limitCharacters">*@
                                    <a href="@Url.Action("EditFeaturedMessage","SuperAdmin",new { id=item.Id})">@Html.Raw(item.Content) </a>
                                    @*</span>*@
                                </td>
                                <td>@item.CreationDate</td>
                                <td>
                                    @if (item.Live == true)
                                    {<img src="../images/yes_icon.png" alt="yes">}
                                    else
                                    {<img src="../images/no_icon.png" alt="no">}
                                </td>
                                <td>@item.AuthorName</td>
                                <td style="width:75px;text-align: center;">
                                    <button type="button" class="edit_item" onClick="window.location.href='@Url.Action("EditFeaturedMessage","SuperAdmin",new { id=item.Id})'">edit</button>
                                </td>
                                <td style="width:75px;text-align: center;">
                                   
                                    <button type="button" class="delete_item featureMessageItem">delete</button>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
        <!--End content_wrap-->



    </div>
    <!--End center_wrap-->
</div>
<!--End full_width-->
<script src="~/js/Admin/admin.featureMessage.js" asp-append-version="true"></script>