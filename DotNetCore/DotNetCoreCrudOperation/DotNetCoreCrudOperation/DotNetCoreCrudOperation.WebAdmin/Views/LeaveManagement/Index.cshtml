@model IEnumerable<PickfordsIntranet.ViewModels.LeaveRequest.LeaveStatusList>;

@{
    ViewData["Title"] = "Leave Requests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="top_filter_bar">
    <div class="center_wrap">
        <div class="top_filter_left">
            <button type="button" class="add_new_list_item" onClick="window.location.href='@Url.Action("Add","LeaveManagement")'">Add new</button>
            <button id="btnDeleteLeaves" type="button" class="delete_list_item">delete</button>
        </div>
        <div class="top_filter_right">
            <div class="drop_menu">
                <ul>
                    <li>
                        <a id="aLeaveStatus"  href="javascript:void()">Select leave status</a>
                        <ul class="drop_menu_sub">
                            <li><a href="javascript:void()" onclick="ShowLeavesByStatus(this)">All</a></li>
                            @foreach (var item in Model)
                            {
                                <li><a href="javascript:void()" onclick="ShowLeavesByStatus(this)">@item.LeaveStatus</a></li>
                            }
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="form_group">
                <fieldset>
                    <input type="text" id="txtSearchLeaveRequest" class="form-control" placeholder="Search">
                    <input type="button" class="search_btn" value="go" />
                </fieldset>
            </div>
        </div>
    </div>
</div>
<div class="full_width">
    <div class="center_wrap">
        <input type="hidden" id="hdnLeaveStatus" value="" />
        <div id="partialLeaveRequests" style="display:none;" class="content_wrap"></div>
    </div>
</div>
<script src="~/js/LeaveRequest/LeaveRequest.js" asp-append-version="true"></script>