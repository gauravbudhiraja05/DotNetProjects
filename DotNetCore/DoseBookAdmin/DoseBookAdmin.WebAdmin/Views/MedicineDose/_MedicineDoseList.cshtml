@model DoseBookAdmin.ViewModels.ClassificationData.MedicineDoseListGridItemVM
@{
    Layout = null;
}
@section Styles{
    <link href="~/css/jquery.dataTables.min.css" rel="stylesheet" asp-append-version="true" />
}

<div class="page_heading">
    <h1>Dose Data</h1>
</div>

<div class="table_wrap">
    <table id="tblMedicineDoses" class="table">
        <thead>
            <tr>
                <th style="width: 70px;">
                    <div class="table_checkbox">
                        <input type="checkbox" id="checkall" class="check_all">
                        <label for="checkall">Accept</label>
                    </div>
                </th>
                <th>
                    <button type="button" class="table_title"><i class="icon"></i>Doctor Name</button>
                </th>
                <th style="width: 300px;">
                    <button type="button" class="table_title active"><i class="icon asc"></i>Medicine Name</button>
                </th>
                <th>
                    <button type="button" class="table_title"><i class="icon"></i>Label</button>
                </th>
                <th>
                    <button type="button" class="table_title"><i class="icon"></i>Duration</button>
                </th>
                <th>
                    <button type="button" class="table_title"><i class="icon"></i>Directions</button>
                </th>
                <th class="editEndUser" style="width:75px;text-align: center;">Edit</th>
                <th class="deleteEndUser" style="width:75px;text-align: center;">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var medicineDose in Model.AllMedicineDoses)
            {
                <tr>
                    <td style="width: 70px;">
                        <div class="table_checkbox">
                            <input type="checkbox" id="checkitem1" class="check_item">
                            <label for="checkitem1"></label>
                        </div>
                    </td>
                    <td>@medicineDose.DoctorName</td>
                    <td>@medicineDose.MedicineName</td>
                    <td>@medicineDose.Label</td>
                    <td>@medicineDose.Duration</td>
                    <td>@medicineDose.Directions</td>
                    <td style="width:75px;text-align: center;">
                        <button type="button" class="edit_item" onClick="window.location.href='@Url.Action("EditMedicineDose","MedicineDose",new { MedicineId = medicineDose.MedicineId})'">Edit</button>
                    </td>
                    <td style="width:75px;text-align: center;">
                        <span style="display:none">@medicineDose.MedicineId</span>
                        <button type="button" class="delete_item medicineDoseItem">delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="~/js/MedicineDose/medicineDose._medicineDose.js" asp-append-version="true"></script>
<script src="~/js/_commonpartial.js" asp-append-version="true"></script>